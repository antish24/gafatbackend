model Inventory {
  id          Int       @id @default(autoincrement())
  name        String
  quantity    Int
  price       Float
  description String?
  requests    Request[] // One inventory item can have many requests
  returns     Return[] // One inventory item can have many returns
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Tender {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  deadline     DateTime
  budget       Float
  status       String
  attachments  String
  companyName  String
  startingDate DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model DailyReport {
  id                Int      @id @default(autoincrement())
  userId            String
  date              DateTime
  shiftTime         String
  location          String
  report            String
  description       String // New field for description
  reportMeasurement String // New field for report measurement
  status            String   @default("Pending")
  attachments       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Return {
  id          Int       @id @default(autoincrement())
  inventoryId Int
  requestId   Int
  employeeId  String // Add this line
  quantity    Int
  createdAt   DateTime  @default(now())
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  request     Request   @relation(fields: [requestId], references: [id])
  employee    Employee  @relation(fields: [employeeId], references: [id]) // Add this line
}

model Request {
  id          Int       @id @default(autoincrement())
  inventoryId Int
  employeeId  String
  quantity    Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  employee    Employee  @relation(fields: [employeeId], references: [id])
  returns     Return[] // One request can have many returns
}

enum TimeSheetStatus {
  Pending
  Approved
  Failed
}

enum PayrollStatus {
  Pending
  Approved
  Failed
}

enum PensionType {
  Yes
  No
}

enum TaxType {
  Yes
  Semi
  No
}

enum SalaryComponentConditionType {
  Add
  Deduct
  Pension
  IncomeTax
}

enum SemiTaxType {
  Fixed
  Percent
  None
}

enum ProjectStatus {
  Pending
  Active
  Terminated
}

enum ProjectPlanStatus {
  Approved
  Failed
  Pending
}

enum EmployeeProjectStatus {
  InActive
  Active
  Terminated
}

enum SalaryComponentStatus {
  InActive
  Active
}

enum SalaryComponentType {
  Earning
  Deduction
}

enum Sex {
  Male
  Female
  Both
}

enum CompanyStatus {
  Active
  InActive
  Pending
}

enum EmployeeSex {
  Male
  Female
}

enum VacancyStatus {
  Open
  Closed
}

enum InterviewStatus {
  Active
  InActive
}

enum OrgStatus {
  Active
  InActive
}

enum LeaveTypeStatus {
  Yes
  No
  Other
}

enum LeaveApplicationStatus {
  Approved
  Failed
  Pending
}

enum EmployeeStatus {
  Active
  InActive
  Terminated
  Pending
}

enum ApplicantStatus {
  Pending
  Hired
  Fail
  Waiting
}
